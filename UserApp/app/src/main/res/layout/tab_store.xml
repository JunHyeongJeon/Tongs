<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/id_tab1_layout">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/toolber_dropshadow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/searchLayout"
        android:background="#23272e"
        android:alpha="0.7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="#ffffff"
            android:text=" 현재마켓 :"
            android:textSize="16dp"
            android:gravity="left"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/id_hyperText" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/search_icon"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/id_hyperText" />

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_storeSwipeLayout"
        android:layout_marginTop="5dp">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_storeListView">
        </ListView>


    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>