<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="82dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:layout_width="82dp"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/placeholder"
        android:id="@+id/id_couponImage"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/id_couponImage">

        <TextView
            android:id="@+id/id_couponTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceInverse"
            android:text="쿠폰 이름"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#23272e" />
        <TextView
            android:id="@+id/id_couponDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceInverse"
            android:text="쿠폰 소개"
            android:textSize="13dp"
            android:textColor="#23272e"
            android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:src="@drawable/location_icon"/>

            <TextView
                android:id="@+id/id_couponLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:textAppearance="?android:attr/textAppearanceInverse"
                android:text="매장 위치"
                android:textSize="10dp"
                android:textColor="#888888"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="42dp"
        android:layout_marginRight="12dp"
        android:id="@+id/id_validView"
        android:background="@drawable/coupon_invalid"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>