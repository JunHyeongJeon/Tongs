<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/id_checkButton"
        android:background="@drawable/btn_o"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/id_cancelButton"
        android:background="@drawable/btn_x"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="40dp"
        android:layout_alignTop="@+id/id_checkButton"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="차례가 되었습니다!"
        android:textSize="24dp"
        android:textColor="#71bd0b"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/id_summonImageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView10"
        android:layout_below="@id/textView6"
        android:layout_marginTop="10dp"
        android:text="가게로 오셔서"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="매니저에게 대기표를 보여주세요"
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:layout_below="@id/textView10"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        android:id="@+id/id_summonImageView"
        android:background="#000000"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="53dp"
        android:text="대기 확인"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:layout_below="@+id/id_cancelButton"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="53dp"
        android:text="대기 취소"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:layout_below="@+id/id_cancelButton"
        android:layout_alignParentStart="true" />

</RelativeLayout>